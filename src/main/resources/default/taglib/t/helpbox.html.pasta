<i:pragma name="description">
    Renders a card/box with hopefully helpful content.
</i:pragma>

<div class="card left-border border-sirius-blue-dark">
    <div class="card-body">
        <div class="d-flex flex-row">
            <div class="mr-auto">
                <i:render name="body"/>
            </div>
            <div class="ml-4">
                <i:render name="actions"/>
            </div>
        </div>
    </div>
</div>
